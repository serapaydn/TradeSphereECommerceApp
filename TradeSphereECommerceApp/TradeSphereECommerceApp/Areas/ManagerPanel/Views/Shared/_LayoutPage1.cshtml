@{
    TradeSphereECommerceApp.Models.Manager manager = Session["manager"] as TradeSphereECommerceApp.Models.Manager;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Areas/ManagerPanel/Assests/css/MainStyle.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
    @RenderSection("styles", false)
</head>
<body>
    <div class="sidebar">
        <h2>TradeSphere</h2>
        <div class="userPanel">
            <h3>Hoşgeldiniz</h3>
            <p>@manager.Name @manager.Surname</p>
        </div>
        <ul>
            <li><a href="@Url.Action("Index", "Home")">Ana Sayfa</a></li>
            <li><a href="@Url.Action("Index", "Category")">Kategori İşlemleri</a></li>
            <li><a href="@Url.Action("Index", "Brand")">Marka İşlemleri</a></li>
            <li><a href="@Url.Action("Index", "Product")">Ürün İşlemleri</a></li>
            <li><a href="@Url.Action("Index", "Comment")">Yorumlar</a></li>
            <li><a href="@Url.Action("Index", "Member")">Üye İşlemleri</a></li>
            <li><a href="@Url.Action("Index", "Order")">Sipariş İşlemleri</a></li>
            <li><a href="@Url.Action("Index", "OrderDetail")">Satış İşlemleri</a></li>
            <li><a href="@Url.Action("Index", "Seller")">Bayiler</a></li>
            <li><a href="@Url.Action("Index", "Manager")">Kullanıcı Bilgilerim</a></li>
            <li><a href="@Url.Action("Logout","Login")">Çıkış</a></li>
        </ul>
        <footer>&copy; 2025 Yönetim Paneli</footer>
    </div>
    <div class="main-content">
        <h1>Yönetim Paneli</h1>
        <p> @RenderBody()</p>
    </div>
</body>
</html>
