@model TradeSphereECommerceApp.Models.Order
@{
    ViewBag.Title = "Sipariş Sil";
    Layout = "~/Areas/ManagerPanel/Views/Shared/_LayoutPage1.cshtml";
}

<div class="breadCrumb">
    <a href="@Url.Action("Index", "Home")">Anasayfa</a> >
    <a href="@Url.Action("Index", "Order")">Siparişler</a> >
    <label>Sipariş Sil</label>
</div>

<div class="pageContent">
    <div class="pagetitle">
        <h2>Sipariş Sil</h2>
    </div>
    <div class="formContent">
        <h3>Bu siparişi silmek istediğinize emin misiniz?</h3>
        <table class="table" cellpadding="5" cellspacing="0" width="600">
            <tr>
                <th align="left" width="30%">Sipariş No</th>
                <td>@Model.OrderID</td>
            </tr>
            <tr>
                <th align="left">Üye ID</th>
                <td>@Model.MemberID</td>
            </tr>
            <tr>
                <th align="left">Sipariş Tarihi</th>
                <td>@Model.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
            </tr>
            <tr>
                <th align="left">Gerekli Tarih</th>
                <td>@Model.RequiredDate.ToString("yyyy-MM-dd")</td>
            </tr>
            <tr>
                <th align="left">Alıcı Adı</th>
                <td>@Model.ShipName</td>
            </tr>
            <tr>
                <th align="left">Teslimat Adresi</th>
                <td>@Model.ShipAddress</td>
            </tr>
            <tr>
                <th align="left">Durum</th>
                <td>@Model.IsActive</td>
            </tr>
            <tr>
                <th align="left">Silinme Durumu</th>
                <td>@(Model.IsDeleted ? "Silinmiş" : "Silinmemiş")</td>
            </tr>
        </table>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <input type="submit" value="Siparişi Sil" class="btn btn-default" />
            </div>
        }
    </div>
    <div class="formfooter">
        @Html.ActionLink("Siparişler Listesine Dön", "Index", "Order", new { @class = "btn btn-secondary" })
    </div>
</div>
@section styles
{
    <link href="~/Areas/ManagerPanel/Assests/css/FormStyle.css" rel="stylesheet" />
}
