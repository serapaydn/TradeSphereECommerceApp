@model TradeSphereECommerceApp.Models.Member
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/ManagerPanel/Views/Shared/_LayoutPage1.cshtml";
}

<div class="breadCrumb">
    <a href="@Url.Action("Index", "Home")">Anasayfa</a> >
    <a href="@Url.Action("Index", "Member")">Üyeler</a> >
    <label>Üye Sil</label>
</div>

<div class="pageContent">
    <div class="pagetitle">
        <h2>Üye Sil</h2>
    </div>
    <div class="formContent">
        <h3>Bu Üyeyi silmek istediğinize emin misiniz?</h3>
        <table class="table" cellpadding="5" cellspacing="0" width="600">
            <tr>
                <th align="left" width="30%">ID</th>
                <td>@Model.ID</td>
            </tr>
            <tr>
                <th align="left">Ad</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th align="left">Soyad</th>
                <td>@Model.Surname</td>
            </tr>
            <tr>
                <th align="left">Kullanıcı Adı</th>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <th align="left">E-posta</th>
                <td>@Model.Mail</td>
            </tr>
            <tr>
                <th align="left">Kayıt Tarihi</th>
                <td>@Model.CreationTime</td>
            </tr>
            <tr>
                <th align="left">Durum</th>
                <td>@Model.IsActive</td>
            </tr>
            <tr>
                <th align="left">Silinme Durumu</th>
                <td>
                    @if (Model.IsDeleted)
                    {
                        <label>Silinmiş</label>
                    }
                    else
                    {
                        <label>Silinmemiş</label>
                    }
                </td>
            </tr>
        </table>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <input type="submit" value="Üye Sil" class="btn btn-default" />
            </div>
        }
    </div>
    <div class="formfooter">
        @Html.ActionLink("Üyeler Listesine Dön", "Index", "Members", new { @class = "btn btn-secondary" })
    </div>
</div>
@section styles
{
    <link href="~/Areas/ManagerPanel/Assests/css/FormStyle.css" rel="stylesheet" />
}
